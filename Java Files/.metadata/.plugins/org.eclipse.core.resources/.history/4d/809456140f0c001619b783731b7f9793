	private static int converter(int number){

	int i;	
		
		String binaryDigit = Integer.toString(number);
	
			int vetorString[] = new int[binaryDigit.length()];
	
	for (i = 0; i < binaryDigit.length(); i++)
				{
					vetorString[i] = binaryDigit.charAt(i);
				}
		
	int sum = 0;
			
	for (i = 0; i < binaryDigit.length(); i++){
				
			if(vetorString[i] == '0')
				sum =  sum + 0;
			else		
				sum = sum + (2 ^ i);
				
					
			}
		
	return sum;
	
	
	}
	
	
	
