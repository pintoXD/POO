	//public void 

	public Data(int a, int b, int c) {
		// TODO Auto-generated constructor stub
	
	//day = a;
	//month = b;
	//year = c;
	
	setDate(a,b,c);
	
	
	}

	public void setDate(int day, int month, int year){
		if(day > 31 || month > 12){
			System.out.println("Invalid date");
		}
		else
			this.day = day;
			this.month = month;
			this.year = year;
				
		
	}
	
	
	

	public int getDay(){

		return day;

	}	


	public int getMonth(){

		return month;

	}	


	public int getYear(){

		return year;

	}

	public void printData(){

		System.out.printf("Data: %d/%d/%d\n", getDay(),getMonth(),getYear());		

	}





}
